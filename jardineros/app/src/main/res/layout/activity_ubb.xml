<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ubb"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pipe.ubb.UBB"
    android:layout_width="wrap_content"
    android:background="#C2C2C2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/btnLoginUsuario"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#71C400"
            android:fontFamily="serif"
            android:text="Login Usuario"
            android:textAlignment="center"
            android:textColor="@android:color/black" />
        <Button
            android:id="@+id/btnLoginJardinero"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#71C400"
            android:fontFamily="serif"
            android:text="Login Jardinero"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Si no posees cuenta, Â¡registrate!"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/black"
            android:fontFamily="serif"/>

        <Button
            android:id="@+id/registrar"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#71C400"
            android:fontFamily="serif"
            android:text="Registrarte"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/login_adminsitrador"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"
            android:background="#71C400"
            android:fontFamily="serif"
            android:text="Login Administrador"
            android:textAlignment="center"
            android:textColor="@android:color/black"

            />

    </LinearLayout>

</RelativeLayout>
