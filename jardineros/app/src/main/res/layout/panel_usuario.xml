<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DC0B5">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:id="@+id/informacion"
        android:textColor="#002117"
        android:textSize="15sp" />

    <Button
        android:text="Modificar Datos"
        android:id="@+id/mdatos"
        android:background="@drawable/boton_redondo"
        android:fontFamily="serif"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:textColor="#002117"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/evaluarJardinero"

        android:text="Evaluar Jardinero"
        android:background="@drawable/boton_redondo"
        android:fontFamily="serif"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:textColor="#002117"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/reclamos"

        android:text="Reclamos"
        android:background="@drawable/boton_redondo"
        android:fontFamily="serif"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:textColor="#002117"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/Vreclamos"

        android:text="Ver Reclamos"
        android:background="@drawable/boton_redondo"
        android:fontFamily="serif"
        android:layout_width="280dp"
        android:textColor="#002117"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/solicitarJardinero"

        android:text="Solicitar Jardinero"
        android:background="@drawable/boton_redondo"
        android:fontFamily="serif"
        android:layout_width="280dp"
        android:layout_marginTop="20dp"
        android:textColor="#002117"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
       />

    <Button
        android:id="@+id/Agenda"

        android:text="Ver mi Agenda"
        android:background="@drawable/boton_redondo"
        android:fontFamily="serif"
        android:layout_width="280dp"
        android:layout_marginTop="20dp"
        android:textColor="#002117"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/csesion"

        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton_redondo"
        android:fontFamily="serif"
        android:text="Cerrar Sesion"
        android:textColor="#002117" />
</LinearLayout>