<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2C2C2">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/informacion"
        android:textSize="18sp" />

    <Button
        android:text="Modificar Datos"

        android:id="@+id/mdatos"
        android:background="#71C400"
        android:fontFamily="serif"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/evaluarJardinero"

        android:text="Evaluar Jardinero"
        android:background="#71C400"
        android:fontFamily="serif"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/reclamos"

        android:text="Reclamos"
        android:background="#71C400"
        android:fontFamily="serif"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/solicitarJardinero"

        android:text="Solicitar Jardinero"
        android:background="#71C400"
        android:fontFamily="serif"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/csesion"

        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#71C400"
        android:fontFamily="serif"
        android:text="Cerrar Sesion" />
</LinearLayout>