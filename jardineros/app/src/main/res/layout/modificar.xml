<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C2C2C2">

    <TextView
        android:text="Modificar Contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textclave" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:ems="10"
        android:id="@+id/eclave1"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:hint="Ingrese nueva contraseña" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/eclave2"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:hint="Repita nueva contraseña" />

    <Button
        android:id="@+id/mclave"

        android:background="#71C400"
        android:fontFamily="serif"
        android:layout_width="230dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Modificar" />

    <TextView
        android:text="Modificar Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enombre"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:hint="Ingrese nuevo nombre" />

    <Button
        android:text="Modificar"
        android:background="#71C400"
        android:fontFamily="serif"
        android:layout_width="230dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/mnombre" />

    <TextView
        android:text="Modificar Apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/eapellido"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:hint="Ingrese nuevo apellido" />

    <Button
        android:text="Modificar"
        android:background="#71C400"
        android:fontFamily="serif"
        android:layout_width="230dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/mapellido" />

    <TextView
        android:text="Modificar Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etelefono"
        android:hint="Ingrese nuevo telefono" />

    <Button
        android:text="Modificar"
        android:background="#71C400"
        android:fontFamily="serif"
        android:layout_width="230dp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/mtelefono" />

</LinearLayout>