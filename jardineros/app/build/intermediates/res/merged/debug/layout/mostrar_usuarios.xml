<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DC0B5">

    <TextView
        android:text="Recuerde que para poder eliminar a un Usuario, debe conocer el correo de este"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:id="@+id/informacion"
        android:textColor="#002117"
        android:textSize="18sp" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_text_redondo"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:id="@+id/etCorreo"
        android:fontFamily="serif"
        android:textSize="14sp"
        android:hint="Ingrese correo de usuario a eliminar"/>

    <EditText
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/input_text_redondo"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:id="@+id/etCausa"
        android:fontFamily="serif"
        android:textSize="14sp"
        android:hint="Ingrese motivo / causa eliminaciÃ³n"/>

    <Button
        android:text="Eliminar"
        android:layout_width="170dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:background="@drawable/boton_redondo"
        android:fontFamily="serif"
        android:textColor="#01341D"
        android:id="@+id/btnEliminar" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:id="@+id/tvMensaje"
        android:textColor="#002117"
        android:textSize="18sp" />

</LinearLayout>